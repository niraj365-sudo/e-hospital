<style>
  #details {
    background: rgba(44, 42, 42, 0.137);
    color: white;
    border: 3px solid rgba(255, 255, 255, 0.13);
    float: left;
  }
</style>

<div class="scrollable" id="data">
  <h4 class="title"><i class="fas fa-user-clock"></i> Update Availability</h4>
  <br />

  <!-- //To update availability -->

  <form
    class="p-3"
    action="/doctor/update_availability"
    method="POST"
    autocomplete="off"
  >
    <div class="col-sm-4">
      <div id="details" class="card">
        <div class="card-body">
          <div>
            <label class="lead">Available Days</label><br />
            <select
              data-placeholder="Choose the days..."
              class="chosen-select"
              multiple="true"
              name="days"
              style="width: 100%; position: relative"
            >
              <option value="Sunday">Sunday</option>
              <option value="Monday">Monday</option>
              <option value="Tuesday">Tuesday</option>
              <option value="Wednesday">Wednesday</option>
              <option value="Thursday">Thursday</option>
              <option value="Friday">Friday</option>
              <option value="Saturday">Saturday</option>
            </select>
            <br />
          </div>
          <br />
          <div class="form-group">
            <label class="lead">Available Time</label>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="startTime">Start Time</label>
                <input
                  type="text"
                  id="startTime"
                  name="startTime"
                  placeholder="hh:mm AM/PM "
                  class="timepicker form-control"
                  required
                />
              </div>
              <div class="form-group col-md-6">
                <label for="endTime">Start Time</label>
                <input
                  type="text"
                  id="endTime"
                  name="endTime"
                  placeholder="hh:mm AM/PM"
                  class="timepicker form-control"
                  required
                />
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="lead"><b>Shift</b></label>
            <select name="shift" class="form-control">
              <option name="day">Day</option>
              <option name="night">Night</option>
            </select>
          </div>
          <br />
          <button type="submit" class="btn btn-success">
            Update Availability
          </button>
        </div>
      </div>
    </div>
  </form>

  <script>
    $(document).ready(function () {
      $("input.timepicker").timepicker({
        timeFormat: "h:mm p",
        interval: 30,
        startTime: "08:00",
        dynamic: false,
        dropdown: true,
        scrollbar: true,
      });
    });
  </script>
</div>
